<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context="presentation.RecipeViewerActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headerRecipeSkill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe_skill"
                android:textAppearance="@style/recipe_header_style" />

            <TextView
                android:id="@+id/recipeSkillLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/recipe_skill_hint"
                android:textAppearance="@style/recipe_body_style"
                android:textColorHint="#555555"
                tools:layout_conversion_absoluteHeight="30dp"
                tools:layout_conversion_absoluteWidth="411dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="45dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/headerRecipeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe_description"
                android:textAppearance="@style/recipe_header_style" />

            <TextView
                android:id="@+id/recipeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/recipe_description_hint"
                android:textAppearance="@style/recipe_body_style"
                android:textColorHint="#555555"
                tools:layout_conversion_absoluteHeight="30dp"
                tools:layout_conversion_absoluteWidth="411dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="75dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/headerRecipeIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe_ingredients"
                android:textAppearance="@style/recipe_header_style" />

            <TextView
                android:id="@+id/recipeIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/recipe_ingredients_hint"
                android:textAppearance="@style/recipe_body_style"
                android:textColorHint="#555555"
                tools:layout_conversion_absoluteHeight="30dp"
                tools:layout_conversion_absoluteWidth="411dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="105dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/headerRecipePrepTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe_prep_"
                android:textAppearance="@style/recipe_header_style" />

            <TextView
                android:id="@+id/recipePrepTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/recipe_prep_hint"
                android:textAppearance="@style/recipe_body_style"
                android:textColorHint="#555555"
                tools:layout_conversion_absoluteHeight="30dp"
                tools:layout_conversion_absoluteWidth="411dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="134dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/headerRecipeCookTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe_cook"
                android:textAppearance="@style/recipe_header_style" />

            <TextView
                android:id="@+id/recipeCookTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/recipe_cook_hint"
                android:textAppearance="@style/recipe_body_style"
                android:textColorHint="#555555"
                tools:layout_conversion_absoluteHeight="30dp"
                tools:layout_conversion_absoluteWidth="411dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="164dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/headerRecipeInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe_instructions"
                android:textAppearance="@style/recipe_header_style" />

            <TextView
                android:id="@+id/recipeInstructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/recipe_instructions_hint"
                android:textAppearance="@style/recipe_body_style"
                android:textColorHint="#555555"
                tools:layout_conversion_absoluteHeight="30dp"
                tools:layout_conversion_absoluteWidth="411dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="194dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/headerRecipeCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recipe_categories"
                android:textAppearance="@style/recipe_header_style" />

            <TextView
                android:id="@+id/recipeCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/recipe_categories_hint"
                android:textAppearance="@style/recipe_body_style"
                android:textColorHint="#555555"
                tools:layout_conversion_absoluteHeight="30dp"
                tools:layout_conversion_absoluteWidth="411dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="224dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
